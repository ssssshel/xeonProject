<%- include('partials/head', {linkCSS:'./styles/css/styles.css', tituloWeb:'Menu'})  %> 
<body>
    <div class="container"> 
        <div class="header" style="height: min-content;">
            <%- include('partials/navbar')  %> 
            <%- include('partials/dropdownNav') %> 
        </div>
        <div class="containerMenu">

            <div class="filtersPanel">
                <div class="filtersElements">
                    <h2 class="filtersTitle">Filtros</h2>
                    <div class="filter1">
                        <h3 class="filterTitle">Departamento</h3>
                        <ul class="filter1Options">
                            <li class="filter1Option"><label for="">Celulares</label><input type="checkbox" name="" id="cbCelulares"></li>
                            <li class="filter1Option"><label for="">Audifonos</label><input type="checkbox" name="" id="cbAudifonos"></li>
                            <li class="filter1Option"><label for="">Watches</label><input type="checkbox" name="" id="cbWatches"></li>
                            <li class="filter1Option"><label for="">Cargadores</label><input type="checkbox" name="" id="cbCargadores"></li>
                            <li class="filter1Option"><label for="">Parlantes</label><input type="checkbox" name="" id="cbParlantes"></li>
                        </ul>
                    </div>
                    <div class="filter2">
                        <h3 class="filterTitle">Marca</h3>
                        <ul class="filter2Options">
                            <li class="filter2Option"><label for="">Apple</label><input type="checkbox" name="" id=""></li>
                            <li class="filter2Option"><label for="">Huawei</label><input type="checkbox" name="" id=""></li>
                            <li class="filter2Option"><label for="">JBL</label><input type="checkbox" name="" id=""></li>
                            <li class="filter2Option"><label for="">Motorola</label><input type="checkbox" name="" id=""></li>
                            <li class="filter2Option"><label for="">Samsung</label><input type="checkbox" name="" id=""></li>
                            <li class="filter2Option"><label for="">Skullcandy</label><input type="checkbox" name="" id=""></li>
                            <li class="filter2Option"><label for="">Sony</label><input type="checkbox" name="" id=""></li>
                            <li class="filter2Option"><label for="">Xiaomi</label><input type="checkbox" name="" id=""></li>
                        </ul>
                    </div>
                    <div class="filter3">
                        <h3 class="filterTitle">Precio</h3>
                        <input type="number" placeholder="Min S/.20" name="" id=""><span>a</span><input type="number" placeholder="Max S/. 10000" name="" id="">
                    </div>
                </div>
            </div>

            <div class="productsPanel">
                <% if (arrayProductsDB.length > 0) { %> 
                    <% arrayProductsDB.forEach(product => { %> 
                    <div class="productGrid">
                        <div class="productImgCont">
                            <img class="productThumbnail" src="<%= product.img %> " alt="<%= product.img %>">
                        </div>
                        <p class="productName">
                            <%= product.nombre %> 
                        </p>
                        <p class="productPrize">S/.<%= product.precio %> </p>
                        <ul class="productSpecs">
                            <% if(product.tipo == 'celular'){ %> 
                                <li class="productSpec">Marca: <%= product.marca %> </li>
                                <li class="productSpec">Color: <%= product.caracteristicas.color %> </li>
                                <li class="productSpec">Capacidad: <%= product.caracteristicas.almacenamiento %> </li>
                                <li class="productSpec">Bater√≠a: <%= product.caracteristicas.bateria %> </li>

                            <% }else{ %>
                                <li class="productSpec">Marca: <%= product.caracteristicas.marca %> </li>
                                <li class="productSpec">Color: <%= product.caracteristicas.color %> </li>
                                <li class="productSpec">Bateria: <%= product.caracteristicas.bateria %> </li>

                            <% } %> 
                        </ul>
                        <a href="/menu/<%= product.id %> "><button class="btnBuy">COMPRAR</button></a>
                    </div>
                    <% }) %> 
                <% } %> 
            </div>
            <template>

            </template>
        </div>

        <%- include('partials/footer')  %> 
    </div>
</body>
<script src="./js/dropdown.js"></script>
</html>